<h1 style="text-align:center;">Blamazon</h1>
<% @products.each do |product| %>
<a href='/products/<%=product.id%>'><h4 style="text-align:center;"><%= product.name %></h4></a>
<br>
<img style="display:block; margin:auto;"src="<%=product.image%>" alt="" />
<br>

<p style="text-align:center;"><%= product.name %> | <%= number_to_currency product.price %>
<div style="display:block; text-align:center;">
  <%= form_for @order_item do |f| %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.number_field :quantity %>
    <%= f.submit "Add to cart", :class => "btn btn-primary btn-sm"%>
  <% end %></p>
</div>
<br>
<hr>
<% end %>
